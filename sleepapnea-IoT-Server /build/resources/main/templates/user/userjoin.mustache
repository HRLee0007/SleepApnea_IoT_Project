{{>layout/header}}
<script>

    function check() {
        var phoneVal = document.getElementById('phoneNum').value;
        var c_phoneVal = document.getElementById('c_phoneNum').value;
        var patternPhone = /01[016789][^0][0-9]{2,3}[0-9]{3,4}/;


        if(!patternPhone.test(phoneVal))
        {
            alert('본인 휴대폰 번호를 확인 해주세요( - 제외 입력 )');
            return false;
        }

        if(!patternPhone.test(c_phoneVal))
        {
            alert('본인 휴대폰 번호를 확인 해주세요( - 제외 입력 )');
            return false;
        }
    }


</script>
    <div class="login-wrap">
        <div class="login-html">
          <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
          <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
          <div class="login-form">
            <div class="sign-in-htm">
              <form action="/auth/loginProc" method="post">
                <div class="group">
                  <label for="user" class="label">아이디</label>
                  <input id="user" name = "username" type="text" class="input">
                </div>
                <div class="group">
                  <label for="pass" class="label">비밀번호</label>
                  <input id="pass" name ="password" type="password" class="input" data-type="password">
                </div>
                <div class="group">
                  <input id="check" type="checkbox" class="check" checked>
                  <label for="check"><span class="icon"></span> Keep me Signed in</label>
                </div>
                <div class="group">
                  <input type="submit" class="button" value="Sign In">
                </div>
              </form>
            </div>
            <div class="sign-up-htm">
              <form action="/auth/joinProc" method="post" onsubmit="return check();">
                  <div class="group">
                    <label for="user" class="label">아이디</label>
                    <input id="user" name="username" type="text" class="input">
                  </div>
                  <div class="group">
                    <label for="pass" class="label">비밀번호</label>
                    <input id="pass" name="password" type="password" class="input" data-type="password">
                  </div>
                  <div class="group">
                    <label for="name" class="label">이름</label>
