<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/setting_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="마이페이지         "
            android:textColor="#8792AC"
            android:textSize="25dp"
            android:elevation="10dp"
            android:background="@drawable/button_half_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/account_button"
            android:drawableLeft="@drawable/x_img"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:textStyle="bold"

            >
        </TextView>

        <ImageView
            android:id="@+id/account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-60dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/your_account_img"
            app:layout_constraintTop_toBottomOf="@+id/setting_text"
            app:layout_constraintBottom_toTopOf="@id/your_order_button"
            />
        <ImageView
            android:id="@+id/your_order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/your_orders_img"
            app:layout_constraintTop_toBottomOf="@+id/account_button"
            app:layout_constraintBottom_toTopOf="@id/live_chat_button"
            />
        <ImageView
            android:id="@+id/live_chat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-150dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/live_chat_img"
            app:layout_constraintTop_toBottomOf="@+id/your_order_button"
            app:layout_constraintBottom_toTopOf="@id/sign_out_button1"
            />
        <ImageView
            android:id="@+id/sign_out_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/sign_out_img"
            app:layout_constraintTop_toBottomOf="@+id/live_chat_button"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
